{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customer": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "total": {
      "type": "decimal"
    },
    "total_no_tax": {
      "type": "decimal"
    },
    "cancelled": {
      "type": "boolean",
      "default": false
    },
    "products": {
      "type": "component",
      "repeatable": true,
      "component": "order.cart-product"
    }
  }
}
